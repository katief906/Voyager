<div class="grid-container">
  <h1 class="cell page-title">Countries in <%= @continent.name %></h1>
  <div class="grid-x grid-margin-x equal-height-cards">
      <% @countries.each do |country| %>
        <div class="cell small-12 medium-6 large-4">
          <div class="card">
            <div class="card-section">
              <a href="/countries/<%= country.id %>">
                <h3><%= country.name %><h3>
              </a>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>